@{
    Layout = "~/Views/Shared/_StaffLeaveLayout.cshtml";
}
<h2>New Holiday Request</h2>

<form>
    <fieldset>
        <div class="row">
            <div class="col-xs-3">
                <div class="form-group">
                    <label for="startDateInput">Start Date</label>
                    <input class="form-control" id="startDateInput">
                </div>
            </div>
            <div class="col-xs-3">
                <div class="form-group">
                    <label for="endDateInput">End Date</label>
                    <input class="form-control" id="endDateInput">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-xs-8">
                    <label for="code">Total number of days</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2">
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="commentsInput">Comments</label>
            <textarea rows="3" class="form-control" id="commentsInput"></textarea>
        </div>

        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
        &nbsp;
        &nbsp;
        <button type="submit" class="btn btn-success">Submit</button>
    </fieldset>
</form>